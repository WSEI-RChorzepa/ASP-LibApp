@model LibApp.Application.Core.Dtos.CustomerDto

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <a asp-controller="Customers" asp-action="Index">Customers</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Customer details
                </li>
            </ol>
        </nav>
    </div>
</div>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>

<div class="row">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-primary btn-sm">Back</a>
        @if(User.IsInRole(RoleEnum.Owner.ToString()) || User.IsInRole(RoleEnum.StoreManager.ToString()))
        {
             <a asp-area="Identity" asp-page="/Account/Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edit customer</a>
        }
    </div>
</div>