@page "{id:int}"
@model LibApp.WebUI.Areas.Identity.Pages.Account.EditModel
@{
    ViewData["Title"] = "Register";
}

<div class="mt-5">
    <h6>Edit customer account</h6>

    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item" aria-current="page">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item" aria-current="page">
                        Account
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Edit customer
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form method="post">

                <p>Edit customer account: @Model.Id</p>
                <hr />

                <div class="row">
                    <div class="col-12">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.MembershipTypeId"></label>
                            <select asp-for="Input.MembershipTypeId" asp-items="Model.MembershipTypes" class="form-control form-control-sm"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Birthdate"></label>
                            <input asp-for="Input.Birthdate" class="form-control form-control-sm" />
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Input.HasNewsletterSubscribed">
                                <input asp-for="Input.HasNewsletterSubscribed" />
                                @Html.DisplayNameFor(m => m.Input.HasNewsletterSubscribed)
                            </label>
                        </div>
                    </div>

                    <div class="col-12">
                        <p>Assign to application role:</p>
                        <div class="form-check">
                            @for (var i = 0; i < Model.Roles.Count(); i++)
                            {
                                <div class="form-check">
                                    <input asp-for="@Model.Roles[i].Value" type="hidden" />
                                    <input asp-for="@Model.Roles[i].Text" type="hidden" />
                                    <input asp-for="@Model.Roles[i].Selected" />
                                    <label>@Model.Roles[i].Text</label>
                                </div>
                            }
                        </div>
                    </div>

                </div>

                @if (Model.AccountIsExist)
                {
                    <button type="submit" class="btn btn-primary btn-sm">Update account</button>
                }
                
                 <a asp-controller="Customers" asp-action="Index" class="btn btn-secondary btn-sm">
                    Return
                </a>

                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">
                    Back to main page
                </a>
            </form>
        </div>

    </div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
